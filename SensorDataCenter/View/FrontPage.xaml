<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SensorDataCenter.View.FrontPage"
             Title="FrontPage">

    <Grid ColumnDefinitions="*"
          ColumnSpacing="5"
          RowDefinitions="200,*,*,*"
          BackgroundColor="#e1d5c9"
          RowSpacing="0">
        <Image Source="welcome.jpg" Grid.Row="0" Aspect="Fill"></Image>
        <Button Text="Get Temperature" 
                        Command="{Binding}"
                Clicked="OnButtonClicked"
                Grid.Row="1"
                BackgroundColor="#c19150"
                TextColor="#fff"
                Margin="10,10,10,0"/>
        <Button Text="Post Temperatures" 
                Command="{Binding}"
                Grid.Row="2"
                BackgroundColor="#ad8042"
                TextColor="#fff"
                Margin="10,10,10,0"/>
        <Button Text="Geolocation" 
                Command="{Binding}"
                Grid.Row="3"
                BackgroundColor="#8c6732"
                TextColor="#fff"
                Margin="10"/>
    </Grid>
</ContentPage>