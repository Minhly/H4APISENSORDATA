<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SensorDataCenter.View.PostTempPage"
             xmlns:model="clr-namespace:SensorDataCenter.Model"
             xmlns:viewmodel="clr-namespace:SensorDataCenter.ViewModel"
             x:DataType="viewmodel:TemperatureViewModel"
             Title="{Binding Title}">
    <Grid
        ColumnDefinitions="*"
        ColumnSpacing="5"
        RowDefinitions="70,*,100, 15"
        BackgroundColor="#e1d5c9"
        RowSpacing="0">
        <Entry Text="{Binding TemperatureText}" Placeholder="Temperature" Grid.Row="0" Margin="10" TextColor="#6F3107" PlaceholderColor="#6F3107" Keyboard="Numeric"
                Grid.Column="0"/>
        <Entry Text="{Binding HumidityText}" Placeholder="Humidity" Grid.Row="1" Margin="10" TextColor="#6F3107" PlaceholderColor="#6F3107" Keyboard="Numeric"
                Grid.Column="0"/>
        <Button Text="Post Temperature" 
                BackgroundColor="#c19150"
                Command="{Binding PostTemperaturesCommand}"
                Grid.Row="2"
                TextColor="White"
                Grid.Column="0"
                Margin="20"/>
    </Grid>
</ContentPage>