<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SensorDataCenter.View.PostTempPage"
             xmlns:model="clr-namespace:SensorDataCenter.Model"
             xmlns:viewmodel="clr-namespace:SensorDataCenter.ViewModel"
             x:DataType="viewmodel:TemperatureViewModel"
             Title="{Binding Title}">
    <Grid
        ColumnDefinitions="*,*"
        ColumnSpacing="5"
        RowDefinitions="*,Auto"
        BackgroundColor="White"
        RowSpacing="0">
        <Entry Text="{Binding TemperatureText}" Placeholder="Temperature" Grid.Row="0"
                Grid.Column="1"/>
        <Entry Text="{Binding HumidityText}" Placeholder="Humidity" Grid.Row="1"
                Grid.Column="1"/>
        <Button Text="Post Temperature" 
                BackgroundColor="#c19150"
                Command="{Binding PostTemperaturesCommand}"
                Grid.Row="2"
                TextColor="White"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Grid.RowSpan="2"
                Margin="8"/>
    </Grid>
</ContentPage>